      <p>Arctic</p>
    </a>
  </div>
  <div class="filter <%= category === 'boats' ? 'active-filter' : '' %>">
    <a href="/listings?category=boats">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boating</p>
    </a>
  </div>
  
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
    </div>
</div>
    <!-- <form method="GET" action="/listings/new">
        <button>Add new listing</button>
    </form> -->
    
    <% if (allListing.length === 0) { %>
      <div class="text-center mt-5">
        <i class="fa-regular fa-face-frown fa-2xl mb-3" style="color: #ff385c;"></i>
        <p class="fs-5">No listings found for "<%= category %>".</p>
        <a href="/listings" class="btn btn-outline-dark mt-3">Back to All Listings</a>
      </div>
    <% } %>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3  ">
      <% for ( listing of allListing){%>
        <a href="/listings/<%=listing._id%>" class="listing-link" >
        <div class="card col listing-card">
        <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem;"
        >
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title%><br></b>
            <%= listing.location%>, <%= listing.country%><br>
            <b>&#8377;<%= listing.price.toLocaleString("en-IN")%> / night</b>
            <i class="tax-info">&nbsp;&nbsp; +18% GST</i><br>
          
          </p>
        </div>
        </div>
      </a>
<% } %>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display!="inline"){
        info.style.display="inline";
      }else{
        info.style.display="none";
      }
    }
  });

  
</script>